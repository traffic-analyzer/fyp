<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_text_message"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.nuces.ateebahmed.locationfinder.TextMessageActivity">

    <include layout="@layout/layout_basic_toolbar" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtQuestion"
        android:text="@string/strQuestion"
        android:textSize="@dimen/material_design_text_size_headline"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:textColor="@color/colorTextPrimary"
        android:textAlignment="center"
        android:textStyle="normal|bold" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/carss"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:src="@drawable/carss"
        android:layout_gravity="center"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <android.support.v7.widget.ListViewCompat
        android:id="@+id/lvSituation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/material_design_button_margin"
        android:paddingLeft="@dimen/material_design_horizontal_padding"
        android:paddingStart="@dimen/material_design_horizontal_padding"
        android:paddingRight="@dimen/material_design_horizontal_padding"
        android:paddingEnd="@dimen/material_design_horizontal_padding"
        android:divider="@color/colorTextSecondary"
        android:dividerHeight="1px"
        android:minHeight="@dimen/material_design_list_height"
        android:listSelector="@android:color/transparent"/>

</android.support.v7.widget.LinearLayoutCompat>
